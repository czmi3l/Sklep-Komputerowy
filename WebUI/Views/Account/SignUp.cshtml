@model Domain.Entities.AppUser

@{
    ViewBag.Title = "Rejestracja";
}

<h2>Rejestracja</h2>

@Html.ValidationSummary()
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Nazwa użytkownika</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Adres Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Hasło</label>
        <input id="password" type="password" name="password" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Potwierdź hasło</label>
        <input id="confirm" type="password" name="confirmPassword" class="form-control" />
    </div>
    
    <br />

    <div class="form-group">
        <label>Imię</label>
        @Html.TextBoxFor(x => x.FirstName, new{@class="form-control"})
    </div>
    <div class="form-group">
        <label>Nazwisko</label>
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ulica</label>
        @Html.TextBoxFor(x => x.Street, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Miasto</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kod pocztowy</label>
        @Html.TextBoxFor(x => x.ZipCode, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Zarejestruj</button>
}

